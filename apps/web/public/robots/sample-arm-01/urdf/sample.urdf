<?xml version="1.0"?>
<robot name="sample-arm-01">
  <link name="base">
    <visual>
      <geometry>
        <box size="0.4 0.2 0.4"/>
      </geometry>
    </visual>
  </link>
  <link name="link1">
    <visual>
      <geometry>
        <box size="0.2 0.8 0.2"/>
      </geometry>
    </visual>
  </link>

  <joint name="joint1" type="revolute">
    <parent link="base"/>
    <child link="link1"/>
    <origin xyz="0 0.25 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" velocity="1"/>
  </joint>
</robot>


